---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			   main {
				   /* width removed for compact layout */
			   }
			   
			   ul {
				   position: relative;
			   }
			  
			   ul::before {
				   content: "";
				   position: absolute;
				   left: 0px;
				   top: -100px;
				   bottom: -100px;
				   width: 3px;
				   background: #e3eaf2;
				   border-radius: 2px;
				   z-index: 0;
			   }

			   ul li {
				   display: block;
				   width: 100%;
				   box-sizing: border-box;
				   margin: 1.5em 0 1em 0;
				   background: #fff;
				   border: 1.5px solid #e3eaf2;
				   border-radius: 4px;
				   box-shadow: 0 1px 4px rgba(90,139,176,0.04);
				   padding: 2em 2.5em 2em 2.5em;
				   position: relative;
				   z-index: 1;
			   }

			/* Circle on the "timeline" */
			   ul li::before {
				   content: "";
				   position: absolute;
				   left: -52px;
				   top: 2em;
				   /*transform: translateY(-50%);*/
				   width: 20px;
				   height: 20px;
				   background: white;
				   border-color: #e3eaf2;
				   border-radius: 50%;
				   border-width:2px;
				   border-style:solid;
				   z-index: 3;
			   }

			   ul li {
				   display: block;
				   width: 100%;
				   box-sizing: border-box;
				   margin-bottom: 1em;
				   background: #fff;
				   border: 1.5px solid #e3eaf2;
				   border-radius: 4px;
				   box-shadow: 0 1px 4px rgba(90,139,176,0.04);
				   padding: 1em 1em 1em 2.5em;
				   position: relative;
				   z-index: 1;
			   }
	
			   /*
			   @media (max-width: 720px) {
					ul li::before {
						left: 10px;
						top: 50%;
						transform: translateY(-50%);
					}
					ul li::after {
						left: 0px;
						top: 50%;
						transform: translateY(-50%);
						width: 18px;
					}
				}
			   */


			   /*
			   @media (orientation: landscape) {
					ul li::before {
						left: 10px;
						top: 50%;
						transform: translateY(-50%);
					}
					ul li::after {
						left: 0px;
						top: 50%;
						transform: translateY(-50%);
						width: 18px;
					}
				}
			   */
				 
			ul li a {
				text-decoration: none;
				transition: 0.2s ease;
			}
				
			
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: left;
			}
				
			ul li:first-child img {
				width: 50%;
			}
				
			ul li:first-child .title {
				width: 100%;
				font-size: 1.563rem;
			}
			/*
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
				
			ul li a {
				display: block;
			}
				*/
				
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1.3;
				font-size: 1em;
			}
			.excerpt {
				color: black;

			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-family: "Comfortaa", sans-serif;
				text-transform: uppercase;
				font-size: 0.85rem;
				letter-spacing: 0.15em; 
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			.hero-thumb {
				width: 80px;
				height: 80px;
				object-fit: cover;
				flex-shrink: 0;
				border-radius: 12px;
			}

			
			.post-row {
				display: flex;
				align-items: left;
				gap: 1em;
				width: 100%;
				max-width: 720px;
			}


			.post-meta {
				flex: 1 1 0%;
				min-width: 0;
			}
				
				
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								
									<div class="post-row">
										<!-- 
										{typeof post.data.heroImage === "string" && post.data.heroImage && (
											<img src={post.data.heroImage} width="80" height="80" alt="" class="hero-thumb" />
										)} -->
										<div class="post-meta">
											<a href={`/blog/${post.id}/`}>
											<h4 class="title">{post.data.title}</h4>
											</a>
											<p class="date">
												<FormattedDate date={post.data.pubDate} />
												{post.data.topic && <> / {post.data.topic}</>}
												{post.data.author && <> / {post.data.author}</>}
											</p>
											<hr/>
											{post.data.excerpt && (
												<div class="excerpt">
													{post.data.excerpt}
													<a href={`/blog/${post.id}/`}>
														<br /><br />Continue reading...
													</a>
												</div>
											)}
										</div>
									</div>
								
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
